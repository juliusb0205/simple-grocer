<div class="w-full">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Scanner</h1>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Products Table (Left) -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Products</h2>
      </div>

      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Code
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Product
              </th>
              <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                Price
              </th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                Action
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @products.each do |product| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= product.product_code %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= product.name %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-900">
                  <%= product.price.format %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-center">
                  <%= form_with url: scan_path, method: :post, local: true, class: "inline" do |form| %>
                    <%= form.hidden_field :product_code, value: product.product_code %>
                    <%= form.submit "Scan", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-sm" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @products.empty? %>
        <div class="px-6 py-12 text-center text-gray-500">
          <p>No products available.</p>
        </div>
      <% end %>
    </div>

    <!-- Current Basket Table (Right) -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200">
      <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
        <h2 class="text-xl font-semibold text-gray-900">
          Current Basket
          <% if @current_basket %>
            <span class="text-sm font-normal text-gray-500">#<%= @current_basket.id %></span>
          <% end %>
        </h2>
        <% if @current_basket&.basket_items&.any? %>
          <%= form_with url: checkout_path, method: :post, local: true, class: "inline" do |form| %>
            <%= form.submit "Checkout", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded text-sm" %>
          <% end %>
        <% end %>
      </div>

      <% if @current_basket&.basket_items&.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Product
                </th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Qty
                </th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                  Price
                </th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @current_basket.basket_items.each do |item| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= item.product.name %></div>
                    <div class="text-sm text-gray-500"><%= item.product.product_code %></div>
                    <% if item.applied_offer %>
                      <div class="text-xs text-green-600 font-medium mt-1">
                        ðŸŽ‰ <%= item.applied_offer.name %>
                      </div>
                    <% end %>
                    <% if item.discount_amount > 0 %>
                      <div class="text-xs text-red-600 font-medium">
                        Discount: -<%= item.discount_amount.format %>
                      </div>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-900">
                    <%= item.quantity %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-900">
                    <% if item.discount_amount > 0 %>
                      <div class="line-through text-gray-500"><%= item.price.format %></div>
                      <div class="font-medium"><%= item.final_price.format %></div>
                    <% else %>
                      <%= item.price.format %>
                    <% end %>
                  </td>
                </tr>
              <% end %>

              <!-- Total Row -->
              <tr class="bg-gray-50 font-semibold">
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900" colspan="2">
                  Total
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm text-gray-900">
                  <%= @current_basket.total_price.format %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="px-6 py-12 text-center text-gray-500">
          <p>Current basket is empty.</p>
          <p class="text-sm mt-2">Scan products to add them to the basket.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
